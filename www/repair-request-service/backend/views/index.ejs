<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Список заявок</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
</head>
<body>
<div id="header-container"></div>
<div class="container">
    <div class="row mt-3 mb-4">
        <div class="col-sm-3">
            <h1 class="text-left">Список заявок</h1>
        </div>
        <div class="col-sm-9 text-end">
            <button id="checkInventoryButton" class="btn btn-secondary ms-2" data-bs-toggle="modal" data-bs-target="#inventoryCheckModal">
                Проверка по инвентарному номеру
            </button>
            <button class="btn btn-primary btn-create" data-bs-toggle="modal" data-bs-target="#createTicketModal">
                <i class="fa fa-plus-circle"></i> Создать заявку
            </button>
        </div>
    </div>

    <!-- Панель фильтров -->
    <div class="row">
        <button class="btn btn-primary d-md-none mb-3" id="filterToggleButton">Фильтры</button>
        <div class="col-md-2 bg-light p-3 rounded d-none d-md-block" id="filterPanel">
            <h5 class="text-primary">Фильтры</h5>
            <form id="filterForm">
                <div class="mb-3">
                    <label for="statusFilter" class="form-label">Статус</label>
                    <select class="form-control" id="statusFilter" name="status">
                        <option value="">Все</option>
                        <% statuses.forEach(status => { %>
                            <option value="<%= status.value %>"><%= status.label %></option>
                        <% }); %>
                    </select>
                </div>
                <!-- Прочие фильтры -->
                <button type="submit" class="btn btn-primary w-100">Применить фильтр</button>
            </form>
        </div>

        <!-- Список заявок -->
        <div class="col-md-10">
            <div id="ticketList" class="table-responsive">
                <table class="table table-hover table-bordered table-sm mt-3">
                    <thead>
                    <tr>
                        <th>№</th>
                        <th>Инв. номер</th>
                        <th>Статус</th>
                        <th>Дата создания</th>
                        <th>Дата закрытия</th>
                        <th>Создатель</th>
                        <th>Редактор</th>
                        <th>Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% tickets.forEach(ticket => { %>
                        <tr>
                            <td><%= ticket.number %></td>
                            <td><%= ticket.inventoryNumber %></td>
                            <td><%= ticket.status %></td>
                            <td><%= ticket.creationDate %></td>
                            <td><%= ticket.closureDate || '—' %></td>
                            <td><%= ticket.creator %></td>
                            <td><%= ticket.editor || '—' %></td>
                            <td>
                                <button class="btn btn-primary btn-sm">Редактировать</button>
                                <button class="btn btn-danger btn-sm">Удалить</button>
                            </td>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
<script src="/js/header.js"></script>
<script src="/js/auth.js"></script>
<script src="/js/tickets.js"></script>
<script src="/js/modals.js"></script>
<script src="/js/select2.js"></script>
<script src="/js/utils.js"></script>
<script src="/js/main.js"></script>
</body>
</html>
